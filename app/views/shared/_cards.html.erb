<%# raise %>
<div class="col-xs-12">
  <div class="card">

    <%= link_to place_path(place) do %>
      <div class="card-top" style="background-image: linear-gradient(rgba(0,0,0,0.6), rgba(0,0,0,0.2)), url(<%= place.posts.last.photo %>);">
      </div>
    <% end %>

    <div class="card-bottom">
    <p> <strong><%= place.name %></strong><br>
      <small><%= place.neighbourhood %>, <%= place.city %></small>
    </p>
      <div class="tags-card-bottom">
          <ul class="tags">
          <% place.tags.limit(4).each do |tag| %>
              <li><a><%= tag.name  %></a></li>
          <% end %>
          </ul>
      </div>
      <div class="wishlist-link">
        <%# wishlistclass = "wishlist-heart-clicked" if WishlistItem.where(place_id: place.id, user_id: current_user.id).any? %>
        <%#= link_to(place_wishlist_items_path(place.id), method: :post, remote: true) do %>
          <i class="fa fa-heart wishlist-heart <%#= wishlistclass %>" data-place-id="<%#= place.id %>"></i>
        <%# end %>
      </div>
      <div class="friends-card-bottom">
        <p><%= place.users.count %> friends have been here</p>
      </div>
    </div>

  </div>
</div>
