<div class="container">
  <div class="row">
    <div class="col-sm-6 col-sm-offset-3 text-center">
      <div class="form_card">
        <h1>Add a post</h1>
        <%= simple_form_for @post do |f| %>
          <%= f.input :place %>
          <%= f.input :photo %>
          <%= f.input :note %>
          <%= f.association :tags, collection: @venue_tags, prompt: "Select Tags", label: "Venue", as: :check_boxes %>
          <%= f.association :tags, collection: @meal_tags, prompt: "Select Tags", label: "Meal", as: :check_boxes %>
          <%= f.association :tags, collection: @food_tags, prompt: "Select Tags", label: "Food", as: :check_boxes %>
          <%= f.association :tags, collection: @vibe_tags, prompt: "Select Tags", label: "Vibe", as: :check_boxes %>
          <%= f.submit "Add Post", class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
