
<div class="wrapper-light-grey">
  <div class="card-container">
    <div class="row">
      <!-- Following -->
      <h3>Users you follow</h3>
      <% @followings.each do |following| %>
      <div class="user-card">
        <%= link_to image_tag(following.picture, class: "avatar-friends-list"), user_path(following.id) %>
        <div class="user-card-content">
          <p><%= following.first_name %> <%= following.last_name %></p>
        </div>

        <div class="user-card-actions">
          <%#= link_to(user_user_relationship_path(following), method: :delete) do  %>
            <a class="btn btn-ghost"> Unfollow </a>
          <%# end %>
        </div>
      </div>
      <% end %>
      <!-- Other users -->
      <h3>All Other Users</h3>
      <% @nonfollowings.each do |user|  %>
        <% if !(user.id == current_user.id) %>
          <div class="user-card">
            <%= link_to image_tag(user.picture, class: "avatar-friends-list"), user_path(user.id) %>
            <div class="user-card-content">
              <p><%= user.first_name %> <%= user.last_name %></p>
            </div>

            <div class="user-card-actions">
              <%= link_to(user_user_relationships_path(user), method: :post) do  %>
                <a class="btn btn-ghost"> Follow </a>
              <% end %>
            </div>
          </div>
          <% end %>
        <% end %>
    </div>
  </div>
</div>
